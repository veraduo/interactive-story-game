<%- include('./partials/header') %>
	<div class="container">
    <h1>Interactive Story Game Usage Statistics</h1>
    <p>Myrtle: <%- myrtle %></p>
    <p>Bruce: <%- bruce %></p>
    <p>Sebastian: <%- sebastian %></p>
    <p>Games Started: <%- games_played %></p>
    <p>Games Completed: <%- games_completed %></p>
  </div>
  
  <script>
    window.onload = function () {
    
    var chart = new CanvasJS.Chart("chartContainer", {
      animationEnabled: true,
      exportEnabled: true,
      theme: "light1", // "light1", "light2", "dark1", "dark2"
      title:{
        text: "Game Stats"
      },
        axisY: {
          includeZero: true
        },
      data: [{
        type: "column", //change type to bar, line, area, pie, etc
        //indexLabel: "{y}", //Shows y value on all Data Points
        indexLabelFontColor: "#5A5757",
            indexLabelFontSize: 16,
        indexLabelPlacement: "outside",
        dataPoints: [
          { x: 10, y: 71, indexLabel: "\u2605 Myrtle" },
          { x: 20, y: 55, indexLabel: "\u2605 Bruce" },
          { x: 30, y: 50, indexLabel: "\u2605 Sebastian" },
          { x: 40, y: 65, indexLabel: "\u2605 Games Started" },
          { x: 50, y: 92, indexLabel: "\u2605 Games Completed" }
        ]
      }]
    });
    chart.render();
    
    }
    </script>
    <body>
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    </body>
  
