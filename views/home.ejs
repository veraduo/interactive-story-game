<%- include('./partials/header') %>
	<div class="container">
    <h1>Interactive Story Game Usage Statistics</h1>
    <p>Myrtle: <span id=myr><%- myrtle %></span></p>
    <p>Bruce: <span id=bru><%- bruce %></span></p>
    <p>Sebastian: <span id=seb><%- sebastian %></span></p>
    <p>Games Started: <span id=pla><%- games_played %></span></p>
    <p>Games Completed: <span id=com><%- games_completed %></span></p>
  </div>
  
  <script>
    window.onload = function () {
    
    var chart = new CanvasJS.Chart("chartContainer", {
      animationEnabled: true,
      exportEnabled: true,
      theme: "light1", // "light1", "light2", "dark1", "dark2"
      title:{
        text: "Game Stats"
      },
      axisY: {
        includeZero: true
      },
      data: {
        labels: ["Myrtle", "Bruce", "Sebastian", "Games Played", "Games Completed"],
        datasets: [{
          label: "Game Stats",
          backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f","#e8c3b9","#c45850"],
          data: [<%- myrtle %>, <%- bruce %>, <%- sebastian %>, <%- games_played %>, <%- games_completed %>]
        }]
      }
      });
    chart.render();
    
    }
    </script>
    <body>
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    </body>
  
